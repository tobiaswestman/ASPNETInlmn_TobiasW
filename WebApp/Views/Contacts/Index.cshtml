@model ContactsViewModel
@{
    ViewData["Title"] = "Contacts";
}

<div class="user-input-content">

    <partial name="~/Views/Shared/Partials/_LocalPageNavPartial.cshtml" model="@ViewData["Title"]" />

    <iframe class="map-frame" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d38737.841774879984!2d18.079359900244572!3d59.31780959501546!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sse!4v1681596562094!5m2!1sen!2sse" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

    <div class="container user-input-form">

        <form asp-controller="Contact" asp-action="RegisterContact" method="post" novalidate>

            <h6 class="user-input-title">Come in Contact with US</h6>

            <div class="row">
                <div class="user-input-item col-lg-6">
                    <input class="user-input" asp-for="Name" placeholder="Your Name" />
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="user-input-item col-lg-6">
                    <input class="user-input" asp-for="Email" placeholder="Your Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="user-input-item">
                <textarea asp-for="Comment" class="input-comment" placeholder="Comments"></textarea>
                <span asp-validation-for="Comment"></span>
            </div>

            <div class="user-input-item">
                <button class="input-button" type="submit">Post Comments</button>
            </div>


        </form>
    </div>
</div>